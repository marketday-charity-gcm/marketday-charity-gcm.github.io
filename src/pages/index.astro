  .sect-mv__flex-container {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
  }

  .sect-mv__flex-item.-image {
    width: 100%;
    max-width: 360px;
    aspect-ratio: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .sect-mv__slogan {
    position: absolute;
    top: 5%;
    right: 10%;
    margin: auto;
    width: 8em;
    height: 4em;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    border-radius: 2em;
    transform: rotate(30deg);
    z-index: 1;
    font-size: 12px;
    /* animation: float 1100ms ease-out 400ms alternate infinite; */
  }

  @keyframes float {
    0% {
      transform: translateY(0.3em) rotate(30deg);
    }
    100% {
      transform: translateY(0) rotate(30deg);
    }
  }

  .sect-mv__slogan::before {
    content: "";
    display: block;
    width: 0;
    height: 0;
    border-width: 1em 0.5em 0 0.5em;
    border-color: #fff rgba(255,255,255,0) rgba(255,255,255,0) rgba(255,255,255,0);
    position: absolute;
    bottom: -1em;
    left: 25%;
  }

  .sect-mv__title {
    position: relative;
    z-index: 2;
    font-size: clamp(18px, 12vw, 100px);
    text-shadow:
      1px 0 0 white,
      -1px 0 0 white,
      0 1px 0 white,
      0 -1px 0 white,
      1px 1px 0 white,
      -1px -1px 0 white,
      -1px 1px 0 white,
      1px -1px 0 white;
  }
  .sect-mv__theme {
    font-size: clamp(16px, 6vw, 60px);
    position: relative;
    z-index: 2;
  }

  .sect-mv__date {
    font-size: clamp(13px, 3vw, 20px);
  }

  .sect-mv__place {
    font-size: clamp(13px, 3vw, 20px);
  }

  .sect-mv__time {
    font-size: clamp(13px, 3vw, 20px);
  }

  .activity-list__set {
    margin-top: 2em;
    display: flex;
    flex-flow: column;

    @screen sm {
      flex-flow: row nowrap;
      gap: 1em;
    }
  }


  .activity-list__set dt {
    font-weight: bold;
    min-width: 12em;
  }

  .menu-list__set {
    display: flex;
    flex-flow: column-reverse;
    position: relative;
    max-width: 240px;
    margin: 2em auto auto;

    @screen md {
      margin: 1em 0 0;
    }
  }
  .menu-list__set img {
    margin: auto;
  }

  .menu-list__set dt {
    background: #000;
    color: white;
  }

  .menu-list__price {
    font-weight: bold;
    position: absolute;
    top: 0;
    right: 0;
    background-color: theme(colors.white);
    padding: 0.3em 0.6em;
    font-size: 1.2rem;
    visibility: hidden;
  }

  .slide-content {
    width: 240px;
    height: 240px;
    margin: auto;
  }

  .slide-content > img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
