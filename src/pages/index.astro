  .sect-mv__flex-container {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
  }

  .sect-mv__flex-item.-image {
    width: 100%;
    max-width: 360px;
    aspect-ratio: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sect-mv__title {
    font-size: clamp(18px, 12vw, 100px);
    text-shadow:
      1px 0 0 white,
      -1px 0 0 white,
      0 1px 0 white,
      0 -1px 0 white,
      1px 1px 0 white,
      -1px -1px 0 white,
      -1px 1px 0 white,
      1px -1px 0 white;
  }
  .sect-mv__theme {
    font-size: clamp(16px, 6vw, 60px);
  }

  .sect-mv__date {
    font-size: clamp(13px, 3vw, 20px);
  }

  .sect-mv__place {
    font-size: clamp(13px, 3vw, 20px);
  }

  .sect-mv__time {
    font-size: clamp(13px, 3vw, 20px);
  }

  .activity-list__set {
    margin-top: 2em;
    display: flex;
    flex-flow: column;

    @screen sm {
      flex-flow: row nowrap;
      gap: 1em;
    }
  }


  .activity-list__set dt {
    font-weight: bold;
    min-width: 12em;
  }

  .menu-list__set {
    margin-top: 1em;
    display: flex;
    flex-flow: column-reverse;
  }
  .menu-list__set img {
    margin: auto;
  }
